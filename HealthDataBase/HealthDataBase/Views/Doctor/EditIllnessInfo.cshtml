@using HealthDataBase.Domain.Entities
@model illness
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>EditIllnessInfo</title>
    <link rel="stylesheet" href="~/Content/bootstrap-theme.min.css" />
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
</head>
<body>
    <div class="panel panel-success">
        <div class="panel-heading text-center">
            <h4>Edit Illness</h4>
        </div>
        <div class="panel-body text-center">
            @using (Html.BeginForm("SaveIllness", "Doctor"))
            {
                @Html.ValidationSummary()
                @Html.HiddenFor(model => model.IllnessId);
                <div class="form-group col-md-5">
                    <label>Name:</label>
                    @Html.TextBoxFor(i => i.Name, new { @class = "form-control" })
                </div>
                <div class="form-group col-md-5">
                    <label>Treatment:</label>
                    @Html.TextBoxFor(i => i.treatment, new {  @class = "form-control" })
                </div>
                    <div class="form-group col-md-5">
                        <label>Symptoms:</label>
                        @Html.TextBoxFor(i => i.Symptoms, new { @class = "form-control" })
                    </div>
                    
                   
                    <div class="form-group col-md-5">
                        <label>Priority:</label>
                        @Html.DropDownList("Priority", new SelectList(Enum.GetNames(typeof(TypeOfPriority))), "Select Prioity Type", new { @class = "form-control" })
                    </div>
                    <div class="text-center">
                        <input type="submit" name="_btnSubmit" value="Save Info" class="btn btn-success" />
                    </div>
                    <div class="text-center">
                        <input type="submit" name="_btnSubmit" value="Delete Illness" class="btn btn-danger" />
                    </div>
            }
        </div>
    </div>
</body>
</html>
